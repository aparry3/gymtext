{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "DATABASE_URL",
        "SESSION_ENCRYPTION_KEY",
        "TWILIO_ACCOUNT_SID",
        "TWILIO_AUTH_TOKEN",
        "TWILIO_NUMBER",
        "STRIPE_SECRET_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "STRIPE_PRICE_ID",
        "OPENAI_API_KEY",
        "GOOGLE_API_KEY",
        "XAI_API_KEY",
        "PINECONE_API_KEY",
        "PINECONE_INDEX",
        "CRON_SECRET",
        "INNGEST_EVENT_KEY",
        "INNGEST_SIGNING_KEY",
        "NODE_ENV",
        "APP_ENV",
        "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
        "NEXT_PUBLIC_BASE_URL",
        "NEXT_PUBLIC_ANALYTICS_WRITE_KEY",
        "SANDBOX_DATABASE_URL",
        "SANDBOX_TWILIO_ACCOUNT_SID",
        "SANDBOX_TWILIO_AUTH_TOKEN",
        "SANDBOX_TWILIO_NUMBER",
        "SANDBOX_STRIPE_SECRET_KEY",
        "SANDBOX_STRIPE_WEBHOOK_SECRET",
        "ADMIN_PHONE_NUMBERS",
        "BASE_URL",
        "SHORT_LINK_DOMAIN",
        "SHORT_LINK_DEFAULT_EXPIRY_DAYS",
        "CONTEXT_MESSAGE_HISTORY_LIMIT",
        "CONTEXT_INCLUDE_SYSTEM_MESSAGES",
        "CONTEXT_MAX_TOKENS",
        "CONTEXT_RESERVE_TOKENS",
        "CONTEXT_CONVERSATION_GAP_MINUTES",
        "CONTEXT_ENABLE_CACHING",
        "CONTEXT_CACHE_TTL",
        "SMS_MAX_LENGTH",
        "CHAT_CONTEXT_MINUTES",
        "MESSAGING_PROVIDER",
        "CONVERSATION_TIMEOUT_MINUTES",
        "MAX_CONVERSATION_LENGTH",
        "INACTIVE_THRESHOLD_DAYS",
        "ENABLE_CONVERSATION_STORAGE",
        "AGENT_LOGGING",
        "DEV_BYPASS_CODE"
      ]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "db:codegen": {
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "@gymtext/shared#build": {
      "dependsOn": ["db:codegen"],
      "outputs": ["dist/**"],
      "env": [
        "DATABASE_URL",
        "SESSION_ENCRYPTION_KEY",
        "TWILIO_ACCOUNT_SID",
        "TWILIO_AUTH_TOKEN",
        "TWILIO_NUMBER",
        "OPENAI_API_KEY",
        "GOOGLE_API_KEY",
        "XAI_API_KEY",
        "PINECONE_API_KEY",
        "PINECONE_INDEX",
        "STRIPE_SECRET_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "STRIPE_PRICE_ID",
        "CRON_SECRET",
        "INNGEST_EVENT_KEY",
        "INNGEST_SIGNING_KEY",
        "NODE_ENV",
        "APP_ENV",
        "SANDBOX_DATABASE_URL",
        "SANDBOX_TWILIO_ACCOUNT_SID",
        "SANDBOX_TWILIO_AUTH_TOKEN",
        "SANDBOX_TWILIO_NUMBER",
        "SANDBOX_STRIPE_SECRET_KEY",
        "SANDBOX_STRIPE_WEBHOOK_SECRET",
        "ADMIN_PHONE_NUMBERS",
        "BASE_URL",
        "SHORT_LINK_DOMAIN",
        "SHORT_LINK_DEFAULT_EXPIRY_DAYS",
        "CONTEXT_MESSAGE_HISTORY_LIMIT",
        "CONTEXT_INCLUDE_SYSTEM_MESSAGES",
        "CONTEXT_MAX_TOKENS",
        "CONTEXT_RESERVE_TOKENS",
        "CONTEXT_CONVERSATION_GAP_MINUTES",
        "CONTEXT_ENABLE_CACHING",
        "CONTEXT_CACHE_TTL",
        "SMS_MAX_LENGTH",
        "CHAT_CONTEXT_MINUTES",
        "MESSAGING_PROVIDER",
        "CONVERSATION_TIMEOUT_MINUTES",
        "MAX_CONVERSATION_LENGTH",
        "INACTIVE_THRESHOLD_DAYS",
        "ENABLE_CONVERSATION_STORAGE",
        "AGENT_LOGGING",
        "DEV_BYPASS_CODE"
      ]
    }
  }
}
