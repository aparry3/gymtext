{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "passThroughEnv": [
        "DATABASE_URL",
        "SANDBOX_DATABASE_URL",
        "SESSION_ENCRYPTION_KEY",
        "TWILIO_ACCOUNT_SID",
        "TWILIO_AUTH_TOKEN",
        "TWILIO_NUMBER",
        "STRIPE_SECRET_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "STRIPE_PRICE_ID",
        "OPENAI_API_KEY",
        "GOOGLE_API_KEY",
        "XAI_API_KEY",
        "PINECONE_API_KEY",
        "PINECONE_INDEX",
        "ADMIN_PHONE_NUMBERS",
        "PROD_WEB_API_URL",
        "SANDBOX_WEB_API_URL",
        "INNGEST_EVENT_KEY",
        "INNGEST_SIGNING_KEY",
        "BASE_URL",
        "SHORT_LINK_DOMAIN",
        "CRON_SECRET"
      ]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "db:codegen": {
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "@gymtext/shared#build": {
      "dependsOn": ["db:codegen"],
      "outputs": ["dist/**"],
      "env": [
        "NODE_ENV"
      ]
    },
    "web#build": {
      "dependsOn": ["@gymtext/shared#build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "DATABASE_URL",
        "SESSION_ENCRYPTION_KEY",
        "TWILIO_ACCOUNT_SID",
        "TWILIO_AUTH_TOKEN",
        "TWILIO_NUMBER",
        "STRIPE_SECRET_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "STRIPE_PRICE_ID",
        "OPENAI_API_KEY",
        "GOOGLE_API_KEY",
        "XAI_API_KEY",
        "PINECONE_API_KEY",
        "PINECONE_INDEX",
        "CRON_SECRET",
        "INNGEST_EVENT_KEY",
        "INNGEST_SIGNING_KEY",
        "NODE_ENV",
        "APP_ENV",
        "BASE_URL",
        "SHORT_LINK_DOMAIN",
        "NEXT_PUBLIC_BASE_URL",
        "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
        "NEXT_PUBLIC_ANALYTICS_WRITE_KEY"
      ]
    },
    "admin#build": {
      "dependsOn": ["@gymtext/shared#build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "DATABASE_URL",
        "SANDBOX_DATABASE_URL",
        "PROD_WEB_API_URL",
        "SANDBOX_WEB_API_URL",
        "ADMIN_PHONE_NUMBERS",
        "SESSION_ENCRYPTION_KEY",
        "NODE_ENV",
        "TWILIO_ACCOUNT_SID",
        "TWILIO_AUTH_TOKEN",
        "TWILIO_NUMBER",
        "STRIPE_SECRET_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "STRIPE_PRICE_ID",
        "OPENAI_API_KEY",
        "GOOGLE_API_KEY",
        "XAI_API_KEY",
        "PINECONE_API_KEY",
        "PINECONE_INDEX",
        "INNGEST_EVENT_KEY",
        "INNGEST_SIGNING_KEY"
      ]
    },
    "programs#build": {
      "dependsOn": ["@gymtext/shared#build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "DATABASE_URL",
        "SESSION_ENCRYPTION_KEY",
        "NODE_ENV",
        "TWILIO_ACCOUNT_SID",
        "TWILIO_AUTH_TOKEN",
        "TWILIO_NUMBER",
        "STRIPE_SECRET_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "STRIPE_PRICE_ID",
        "OPENAI_API_KEY",
        "GOOGLE_API_KEY",
        "PINECONE_API_KEY",
        "PINECONE_INDEX"
      ]
    }
  }
}
