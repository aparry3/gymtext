{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "passThroughEnv": ["DATABASE_URL"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "passThroughEnv": [
        "DATABASE_URL",
        "SANDBOX_DATABASE_URL",
        "SESSION_ENCRYPTION_KEY",
        "TWILIO_ACCOUNT_SID",
        "TWILIO_AUTH_TOKEN",
        "TWILIO_NUMBER",
        "STRIPE_SECRET_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "STRIPE_PRICE_ID",
        "DEFAULT_PROGRAM_ID",
        "OPENAI_API_KEY",
        "GOOGLE_API_KEY",
        "XAI_API_KEY",
        "PINECONE_API_KEY",
        "PINECONE_INDEX",
        "ADMIN_PHONE_NUMBERS",
        "PROD_WEB_API_URL",
        "SANDBOX_WEB_API_URL",
        "INNGEST_EVENT_KEY",
        "INNGEST_SIGNING_KEY",
        "BASE_URL",
        "SHORT_LINK_DOMAIN",
        "CRON_SECRET",
        "BLOB_READ_WRITE_TOKEN",
        "WHATSAPP_PHONE_NUMBER_ID",
        "WHATSAPP_ACCESS_TOKEN",
        "WHATSAPP_WEBHOOK_VERIFY_TOKEN",
        "WHATSAPP_API_VERSION",
        "WHATSAPP_ENABLED",
        "WHATSAPP_PHONE_NUMBER",
        "WHATSAPP_BUSINESS_ACCOUNT_ID",
        "WHATSAPP_TEMPLATE_DAILY_WORKOUT",
        "WHATSAPP_TEMPLATE_WEEKLY_CHECKIN",
        "WHATSAPP_TEMPLATE_WELCOME",
        "WHATSAPP_TEMPLATE_SUBSCRIPTION_REMINDER"
      ]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "db:codegen": {
      "cache": false,
      "passThroughEnv": ["DATABASE_URL"]
    },
    "@gymtext/shared#build": {
      "dependsOn": ["db:codegen"],
      "outputs": ["dist/**"],
      "env": [
        "DATABASE_URL",
        "NODE_ENV"
      ]
    },
    "web#build": {
      "dependsOn": ["@gymtext/shared#build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "DATABASE_URL",
        "SESSION_ENCRYPTION_KEY",
        "TWILIO_ACCOUNT_SID",
        "TWILIO_AUTH_TOKEN",
        "TWILIO_NUMBER",
        "STRIPE_SECRET_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "STRIPE_PRICE_ID",
        "DEFAULT_PROGRAM_ID",
        "OPENAI_API_KEY",
        "GOOGLE_API_KEY",
        "XAI_API_KEY",
        "PINECONE_API_KEY",
        "PINECONE_INDEX",
        "CRON_SECRET",
        "INNGEST_EVENT_KEY",
        "INNGEST_SIGNING_KEY",
        "NODE_ENV",
        "APP_ENV",
        "BASE_URL",
        "SHORT_LINK_DOMAIN",
        "NEXT_PUBLIC_BASE_URL",
        "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
        "NEXT_PUBLIC_ANALYTICS_WRITE_KEY",
        "BLOB_READ_WRITE_TOKEN",
        "WHATSAPP_PHONE_NUMBER_ID",
        "WHATSAPP_ACCESS_TOKEN",
        "WHATSAPP_WEBHOOK_VERIFY_TOKEN",
        "WHATSAPP_API_VERSION",
        "WHATSAPP_ENABLED",
        "WHATSAPP_PHONE_NUMBER",
        "WHATSAPP_BUSINESS_ACCOUNT_ID",
        "WHATSAPP_TEMPLATE_DAILY_WORKOUT",
        "WHATSAPP_TEMPLATE_WEEKLY_CHECKIN",
        "WHATSAPP_TEMPLATE_WELCOME",
        "WHATSAPP_TEMPLATE_SUBSCRIPTION_REMINDER"
      ]
    },
    "admin#build": {
      "dependsOn": ["@gymtext/shared#build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "DATABASE_URL",
        "SANDBOX_DATABASE_URL",
        "PROD_WEB_API_URL",
        "SANDBOX_WEB_API_URL",
        "ADMIN_PHONE_NUMBERS",
        "SESSION_ENCRYPTION_KEY",
        "NODE_ENV",
        "TWILIO_ACCOUNT_SID",
        "TWILIO_AUTH_TOKEN",
        "TWILIO_NUMBER",
        "STRIPE_SECRET_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "STRIPE_PRICE_ID",
        "OPENAI_API_KEY",
        "GOOGLE_API_KEY",
        "XAI_API_KEY",
        "PINECONE_API_KEY",
        "PINECONE_INDEX",
        "INNGEST_EVENT_KEY",
        "INNGEST_SIGNING_KEY",
        "BLOB_READ_WRITE_TOKEN"
      ]
    },
    "programs#build": {
      "dependsOn": ["@gymtext/shared#build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "DATABASE_URL",
        "SESSION_ENCRYPTION_KEY",
        "NODE_ENV",
        "TWILIO_ACCOUNT_SID",
        "TWILIO_AUTH_TOKEN",
        "TWILIO_NUMBER",
        "STRIPE_SECRET_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "STRIPE_PRICE_ID",
        "OPENAI_API_KEY",
        "GOOGLE_API_KEY",
        "PINECONE_API_KEY",
        "PINECONE_INDEX",
        "NEXT_PUBLIC_BASE_URL",
        "NEXT_PUBLIC_WEB_BASE_URL",
        "BLOB_READ_WRITE_TOKEN"
      ]
    }
  }
}
